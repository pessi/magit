#!/bin/sh
# /usr/lib/emacsen-common/packages/remove/foo
# [ This particular script hasn't been tested either, so be careful. ]
set -e
PACKAGE=magit

FLAVOR=$1
elc_dir=/usr/share/${FLAVOR}/site-lisp/${PACKAGE}

echo remove/${PACKAGE}: Handling removal of emacsen flavor ${FLAVOR}

if [ ${FLAVOR} != emacs ]
then
  echo emacsen-common: purging byte-compiled files for ${FLAVOR}
  rm -f ${elc_dir}/*.elc ${elc_dir}/*.el
  rmdir ${elc_dir} || true
fi
exit 0;
